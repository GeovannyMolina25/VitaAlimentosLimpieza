@model List<LimpRegistroDetalle>

<form method="post" asp-action="Envio" class="form-horizontal">
    <input type="hidden" name="CodArea" value='@TempData["Area"]' />
    <input type="hidden" name="CodFormulario" value='@TempData["Formulario"]' />
    <input type="hidden" name="NumFormulario" value='@TempData["NumFormulario"]' />
    <input type="hidden" name="CodEmpresa" value='@TempData["Empresa"]' />

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-header">
                        <h5>Formulario: @TempData["Area"]</h5>
                        <h5>Formulario: @TempData["NumFormulario"]</h5>
                        <h3 class="card-title">Tabla de formularios</h3>
                        <div class="card-tools">
                            <div class="input-group input-group-sm" style="width: 150px;">
                                <input type="text" name="table_search" class="form-control float-right" placeholder="Search">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body table-responsive p-0">
                    <table class="table table-hover text-nowrap">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Check</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (var i = 0; i < Model.Count; i++)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(m => Model[i].CodActividad)</td>
                                    <td>
                                        <div class="form-check">
                                            <input type="hidden" name="model[@i].CodActividad" value='@Model[i].CodActividad' />
                                            <input type="checkbox" class="form-check-input" name="model[@i].Realizado" value="true" @(Model[i].Realizado ? "checked" : "") />
                                            <label class="form-check-label @((Model[i].Realizado) ? "text-success" : "")">
                                                @(Model[i].Realizado ? "Realizado" : "No Realizado")
                                            </label>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <button type="submit" class="btn btn-danger">Enviar</button>
        </div>
    </div>
</form>
<form method="post" asp-action="Salir" class="form-horizontal">
    <input type="hidden" name="CodArea" value='@TempData["Area"]' />
    <input type="hidden" name="CodFormulario" value='@TempData["Formulario"]' />
    <input type="hidden" name="NumFormulario" value='@TempData["NumFormulario"]' />
    <input type="hidden" name="CodEmpresa" value='@TempData["Empresa"]' />
    <button type="submit" class="btn btn-danger">Atras</button>
</form>
