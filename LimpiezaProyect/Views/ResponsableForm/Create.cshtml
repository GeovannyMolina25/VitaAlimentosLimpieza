@model LimpRegistro
<div class="container text-center">
    <div class="row align-items-center">
        <div class="col-2">   
        </div>
        <div class="col-8">
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title">Vita Alimentos</h3>
                </div>

                <form method="post" asp-action="EnviarForm" id="myForm">
                    <div class="card-body">
                        <div class="form-group">
                            <label for="dropdown" class="control-label">Seleccione el turno:</label>
                            <select name="turno" id="dropdown" class="form-control">
                                <option selected disabled>---Seleccionar---</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                            </select>
                        </div>
                    </div>
                    <div class="card-footer d-flex ">
                        <input type="hidden" name="CodArea" value="@TempData["Area"]" />
                        <input type="hidden" name="CodFormulario" value="@TempData["Formulario"]" />
                        <input type="hidden" name="CodEmpresa" value="@TempData["Empresa"]" />
                        <button type="button" onclick="submitForm()" class="btn btn-info">Enviar</button>
                        
                    </div>
                </form>
                <form method="post" asp-action="SalirRegistro" id="myForm">
                    <input type="hidden" name="CodArea" value="@TempData["Area"]" />
                    <input type="hidden" name="CodFormulario" value="@TempData["Formulario"]" />
                    <input type="hidden" name="CodEmpresa" value="@TempData["Empresa"]" />
                <button type="submit" class="btn btn-default">Cancel</button>
                </form>
            </div>
        </div>
        <div class="col-2">
        </div>
    </div>
</div>



<script>
    function submitForm() {
        var selectedValue = $("#dropdown").val();
        if (selectedValue === null || selectedValue === "") {
            alert("Por favor, seleccione una opción antes de enviar.");
        } else {
            $("#myForm").submit(); // Envía el formulario si se selecciona una opción.
        }
    }
</script>


