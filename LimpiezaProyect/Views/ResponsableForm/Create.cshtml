@model LimpRegistro
<div class="card card-info">
    <div class="card-header">
        <h3 class="card-title">Horizontal Form</h3>
    </div>
    <div>
        <h5>Area: @TempData["Area"] </h5>
        <h5>Formulario: @TempData["Formulario"] </h5>
        <h5>Usuario: Nelson Molina</h5>
        <p>Fecha y hora actual: <span id="fechaHoraActual"></span></p>
    </div>

    <form method="post" asp-action="EnviarForm" id="myForm">
        <div class="card-body">
            <div class="form-group">
                <label for="dropdown" class="control-label">Seleccionar una opción:</label>
                <select name="turno" id="dropdown" class="form-control">
                    <option selected disabled>---Seleccionar---</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                </select>
            </div>
        </div>
        <div class="card-footer">
            <input type="hidden" name="CodArea" value="@TempData["Area"]" />
            <input type="hidden" name="CodFormulario" value="@TempData["Formulario"]" />
            <input type="hidden" name="CodEmpresa" value="@TempData["Empresa"]" />
            <button type="button" onclick="submitForm()" class="btn btn-info">Enviar</button>
            <button type="submit" class="btn btn-default float-right">Cancel</button>
        </div>
        <!-- /.card-footer -->
    </form>
</div>

<script>
    function submitForm() {
        var selectedValue = $("#dropdown").val();
        if (selectedValue === null || selectedValue === "") {
            alert("Por favor, seleccione una opción antes de enviar.");
        } else {
            $("#myForm").submit(); // Envía el formulario si se selecciona una opción.
        }
    }
</script>
