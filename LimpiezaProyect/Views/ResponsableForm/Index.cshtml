@model List<LimpRegistro>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">

                <div>
                    <h5>Area: @TempData["Area"] </h5>
                    <h5>Formulario: @TempData["Formulario"] </h5>
                    <h5>Usuario: Nelson Molina</h5>
                    <p>Fecha y hora actual: <span id="fechaHoraActual"></span></p>

                </div>
                <h3 class="card-title">Tabla de formularios</h3>
                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table id="tablaRegistros" class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <td>Numero</td>
                            <td>Area</td>
                            <td>Turno</td>
                            <td>Fecha</td>
                            <td>Actividades</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var registros in Model)
                        {
                            var botonID = "botonCerrar_" + registros.NumFormulario; // Crea un ID único para cada botón
                            <tr>
                                <td>@Html.DisplayFor(m => registros.NumFormulario)</td>
                                <td>@Html.DisplayFor(m => registros.CodArea)</td>
                                <td>@Html.DisplayFor(m => registros.Turno)</td>
                                <td>@Html.DisplayFor(m => registros.FechaHoraCreacion)</td>

                                <td>
                                    <form method="post" action="@Url.Action("Index", "ActividadResponsable")">
                                        <input type="hidden" name="CodArea" value="@registros.CodArea" />
                                        <input type="hidden" name="CodFormulario" value="@registros.CodFormulario" />
                                        <input type="hidden" name="NumFormulario" value="@registros.NumFormulario" />
                                        <input type="hidden" name="CodEmpresa" value="@registros.CodEmpresa" />

                                        <button type="submit" class="btn btn-primary">Ver</button>
                                    </form>
                                    <form method="post" action="@Url.Action("EliminarRegistro", "ResponsableForm")">
                                        <input type="hidden" name="CodArea" value="@registros.CodArea" />
                                        <input type="hidden" name="NumFormulario" value="@registros.NumFormulario" />
                                        <input type="hidden" name="CodEmpresa" value="@registros.CodEmpresa" />
                                        <button type="submit" class="btn btn-danger" name="btnEliminar" value="Eliminar">Eliminar</button>
                                    </form>

                                    <!-- Usar el ID único para cada botón -->
                                    <button type="button" id="@botonID" class="btn btn-primary" onclick="confirmarCerrar('@botonID')">Cerrar</button>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>

            </div>
            <!-- /.card-body -->

        </div>
        <!-- /.card -->
        <form method="post" asp-action="CreateForm">
            <input type="hidden" name="CodArea" value="@TempData["Area"]" />
            <input type="hidden" name="CodFormulario" value="@TempData["Formulario"]" />
            <input type="hidden" name="CodEmpresa" value="@TempData["Empresa"]" />
            <button type="submit" class="btn btn-danger">Crear</button>
        </form>
        
    </div>

</div>

<script>
    var botonVisible = true; // Variable para rastrear el estado del botón

    function mostrarFechaHoraActual() {
        var fechaHora = new Date();
        var elementoFechaHora = document.getElementById("fechaHoraActual");
        elementoFechaHora.textContent = fechaHora.toLocaleString();
    }
    setInterval(mostrarFechaHoraActual, 1000);

    mostrarFechaHoraActual();

        function confirmarCerrar(botonID) {
            // Mostrar un mensaje de confirmación
            var confirmacion = confirm("¿Está seguro de que desea cerrar?");
            if (confirmacion) {
                // Si el usuario confirma y el botón está visible, ocultar el botón
                var botonCerrar = document.getElementById(botonID);
                if (botonCerrar) {
                    botonCerrar.style.display = "none";
                }
            } else {
                // Si el usuario cancela o el botón ya está oculto, no se hace nada
            }
        }
</script>