@model List<LimpArea>

<div class="content">
    <h5>Usuario: @((TempData["User"] as List<string>)?.FirstOrDefault())</h5>
    <p>Fecha y hora actual: <span id="fechaHoraActual"></span></p>
    
    @if ((TempData["User"] as List<string>)?.ElementAtOrDefault(2) == "super")
    {
        <h5 class="mb-2 mt-4">Formularios</h5>
        <div class="row">
            <div class="col-lg-4 col-4">
                <!-- small card -->
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>@TempData["Count"]</h3>
                        <p><strong>Formularios abiertos</strong></p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-folder-open"></i>
                    </div>
                    <form method="post" action="@Url.Action("Filter", "Supervisor")">
                        <input type="hidden" name="accion" value="3" />
                        @foreach (var item in (TempData["User"] as List<string>))
                        {
                            <input type="hidden" name="User" value="@item" />
                        }
                        <button type="submit" class="btn btn-outline-secondary">Ver mas ...</button>
                    </form>
                </div>
            </div>
            <div class="col-lg-4 col-4">
                <!-- small card -->
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>@TempData["NoRevisado"]</h3>
                        <p>Formularios <strong>NO revisados</strong></p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-exclamation-circle"></i>
                    </div>

                    <form method="post" action="@Url.Action("Filter", "Supervisor")">
                        <input type="hidden" name="accion" value="1" />
                        @foreach (var item in (TempData["User"] as List<string>))
                        {
                            <input type="hidden" name="User" value="@item" />
                        }
                        <button type="submit" class="btn btn-outline-secondary">Ver mas ...</button>
                    </form>
                </div>
            </div>
            <div class="col-lg-4 col-4">
                <!-- small card -->
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>@TempData["Revisado"]</h3>
                        <p>Formulario <strong>revisados</strong></p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-check-circle"></i>
                    </div>

                    <form method="post" action="@Url.Action("Filter", "Supervisor")">
                        <input type="hidden" name="accion" value="2" />
                        @foreach (var item in (TempData["User"] as List<string>))
                        {
                            <input type="hidden" name="User" value="@item" />
                        }
                        <button type="submit" class="btn btn-outline-secondary">Ver mas ...</button>
                    </form>
                </div>
            </div>
        </div>


    }
    @if ((TempData["User"] as List<string>)?.ElementAtOrDefault(2) == "Responsable")
    {
        
  
    <h5 class="mb-2">Tipos de formularios</h5>
    <div class="row">
        @foreach (var area in Model)
        {
            <div class="col-lg-4 col-6">
                <div class="card card-success">
                    <div class="card-header">
                        <h3 class="card-title">Areas</h3>
                        <div class="card-tools">
                            <button href="#" type="button" class="btn btn-tool">
                                <a href="#" class="nav-link">
                                    <i class="nav-icon fas fa-trash"></i>
                                </a>
                            </button>
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <form method="post" action="@Url.Action("Index","Responsable")">
                            <input type="hidden" name="codArea" value="@area.CodArea" />
                            <input type="hidden" name="CodRegistro" value="@area.CodRegistro" />
                            @foreach (var item in (TempData["User"] as List<string>))
                            {
                                <input type="hidden" name="User" value="@item" />
                            }
                            <button type="submit" style="border: none; background: none; padding: 0; margin: 0; cursor: pointer; font: inherit;">@Html.DisplayFor(m => area.Descripcion)</button>
                            
                        </form>
                    </div>
                </div>
            </div>
        }
        
    </div>
    <div class="text-center mt-3">
        @foreach (var item in (TempData["User"] as List<string>))
        {
            <input type="hidden" name="User" value="@item" />
        }
        <button type="button" class="btn btn-danger"><a asp-action="CreateArea" style="None">Añadir</a></button>
        
    </div>
    }
</div>
